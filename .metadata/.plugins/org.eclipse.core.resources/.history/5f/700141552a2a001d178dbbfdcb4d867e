package br.org.serratec.teste;

import javax.swing.JOptionPane;

import br.org.serratec.model.Produto;

public class TesteProduto {

	public static void main(String[] args) {
		int quantidade =0, menu;
		double valor= 0;
		double icms;
		String descricao ="";
		char opcao;
		
		Produto prod = new Produto(descricao, valor, quantidade);

		
		while (opcao != 'S') {
			descricao = JOptionPane.showInputDialog("Produto: ");
			valor = Double.parseDouble(JOptionPane.showInputDialog("Valor: "));
			quantidade = Integer.parseInt(JOptionPane.showInputDialog("Quantidade: "));
			icms = prod.calcularIcms();
			menu = 1; 
					
			JOptionPane.showMessageDialog(null, icms);
			
			menu = Integer.parseInt(JOptionPane.showInputDialog(null, menu, "ICMS", JOptionPane.QUESTION_MESSAGE));
		}

	}

}
