package exercicios;

import java.util.Scanner;

public class Dados {

	public static void main(String[] args) {
		Integer qtdPessoas = 4;
		String nome[];
		double altura[], maiorAltura = 0.00, menorAltura = 999.00, mediaAltura, peso[], maiorPeso = 0.00, menorPeso = 999.00, mediaPeso;
		Scanner sc = new Scanner(System.in);
		
		for (int i = 1; i <= qtdPessoas; i++) {
			System.out.print("Informe o " + i + "ยบ nome: ");
			nome[i] = sc.next();
			System.out.print("Informe o peso do(a) " + nome + ": ");
			peso[i]  = sc.nextDouble();
			System.out.print("Informe a altura do(a) " + nome + ": ");
			altura[i] = sc.nextDouble();
			System.out.println("");
			
			maiorPeso = peso[i] > maiorPeso ? peso[i]:maiorPeso;
					
		}
		
		sc.close();
		

	}

}
